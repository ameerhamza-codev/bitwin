<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/medical_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_close_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:padding="5sp"
        android:src="@drawable/ic_baseline_close_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10sp"
        android:layout_margin="10sp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                >

                <TextView
                    android:id="@+id/emText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is your emergency?"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_googred500"/>


                <Button
                    android:id="@+id/btn_accident"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/emText"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I was in a Road Accident"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_bleeding"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_accident"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I have severe wounds &amp; I'm bleeding"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_heart"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_bleeding"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I'm having a Heart Attack"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_breathing"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_heart"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I'm having an Asthma Attack"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_seizure"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_breathing"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I'm having a Seizure"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_seizure"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I'm having a Stroke"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_stroke"
                    android:layout_marginVertical="5sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@color/blue_200"
                    android:elevation="10sp"
                    android:text="I'm having an Allergic Reaction"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_fine_medical"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_allergy"
                    android:text="I am fine"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>