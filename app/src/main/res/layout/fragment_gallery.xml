<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contact_layout"
    android:isScrollContainer="true"
    tools:context=".ui.gallery.GalleryFragment">

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_icon="@drawable/ic_baseline_person_24"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_multiline="false"
        app:liv_subtitle="John Doe"
        app:liv_title="Name" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/emergency_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_multiline="false"
        app:liv_subtitle="00000000000"
        app:liv_title="Emergency" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/disaster_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergency_contact"
        app:liv_title="Disaster"
        app:liv_subtitle="00000000000"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_multiline="false"/>

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/fire_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disaster_contact"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_multiline="false"
        app:liv_subtitle="00000000000"
        app:liv_title="Fire" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/medical_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fire_contact"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_multiline="false"
        app:liv_subtitle="00000000000"
        app:liv_title="Medical" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/police_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/medical_contact"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_menu="@menu/menu_emergency_edit"
        app:liv_multiline="false"
        app:liv_subtitle="00000000000"
        app:liv_title="Police" />

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/forward_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/police_contact"
        app:liv_icon="@drawable/ic_baseline_contact_phone_24"
        app:liv_menu="@menu/menu_emergency_edit"
        android:visibility="gone"
        app:liv_multiline="false"
        app:liv_subtitle="00000000000"
        app:liv_title="Auto Forward SMS Contact" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:background="@color/blue_200"
        android:contentDescription="Edit Contact"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:background="@color/blue_200"
        android:contentDescription="Edit Contact"
        app:srcCompat="@drawable/ic_baseline_person_24" />




</RelativeLayout>