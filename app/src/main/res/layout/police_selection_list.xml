<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/police_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/btn_close_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:padding="5sp"
        android:src="@drawable/ic_baseline_close_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10sp"
        android:layout_margin="10sp"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                >

                <TextView
                    android:id="@+id/emText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is your emergency?"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_googred500"/>


                <Button
                    android:id="@+id/btn_theft"
                    android:text="Theft"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:elevation="10sp"
                    android:layout_below="@+id/emText"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

                <Button
                    android:id="@+id/btn_assault"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_theft"
                    android:text="Assault"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

                <Button
                    android:id="@+id/btn_abduction"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_assault"
                    android:text="Abduction"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

                <Button
                    android:id="@+id/btn_gang"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_abduction"
                    android:text="Gang Violence"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

                <Button
                    android:id="@+id/btn_drug"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_gang"
                    android:text="Drug Violence"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

                <Button
                    android:id="@+id/btn_shooting"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_drug"
                    android:text="Shooting"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>


                <Button
                    android:id="@+id/btn_fine_police"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_below="@+id/btn_shooting"
                    android:text="I am fine"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:elevation="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    android:layout_marginVertical="5sp"
                    android:background="@color/blue_200"/>

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>